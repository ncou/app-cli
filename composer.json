{
    "name": "chiron/app-cli",
    "type": "project",
    "description": "Chiron Skeleton Console Application",
    "homepage": "https://github.com/ncou/app",
    "keywords": [
        "chiron",
        "skeleton",
        "console",
        "application",
        "app"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "chiron/chiron": "^3.9"
    },
    "require-dev": {
        "chiron/container": "^3.4",
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}
